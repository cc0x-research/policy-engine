{
  "name": "@cc0x-group/policy-engine",
  "private": true,
  "version": "0.0.0",
  "license": "LGPL-3.0-only",
  "scripts": {
    "build": "hardhat compile",
    "build:ts:typecheck": "tsc --noEmit",
    "deploy": "hardhat deploy --network",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol' --max-warnings 0",
    "lint:ts": "eslint",
    "lint:fix": "npm run lint:fix:sol && npm run lint:fix:ts",
    "lint:fix:sol": "prettier -w contracts/ && solhint 'contracts/**/*.sol' --fix --noPrompt",
    "lint:fix:ts": "eslint --fix",
    "test": "hardhat test --network hardhat",
    "test:bench": "hardhat test --grep '@bench'",
    "verify": "hardhat etherscan-verify --force-license --license LGPL-3.0 --network"
  },
  "dependencies": {
    "hardhat-deploy": "^1.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@openzeppelin/contracts": "^5.2.0",
    "@safe-global/safe-contracts": "1.4.1-2",
    "@safe-global/safe-singleton-factory": "^1.0.41",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.3",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.19",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.5.0",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^5.0.5",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.15",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "overrides": {
    "@safe-global/safe-contracts": {
      "ethers": "^6.13.5"
    }
  }
}
